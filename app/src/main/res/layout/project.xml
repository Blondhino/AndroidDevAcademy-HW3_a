<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginBottom="@dimen/small_margin"
    android:background="@drawable/black_line"
    >

    <ImageView
        android:id="@+id/ivAboutMeIco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_project"
        />

    <TextView
        android:id="@+id/tvProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivAboutMeIco"
        android:text="@string/project_title"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/medium_margin"
        />

    <TextView

        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProjectTitle"
        android:layout_toRightOf="@id/ivAboutMeIco"
        android:text="@string/dummy_text_small"
        android:fontFamily="sans-serif-light"
        />


</RelativeLayout>